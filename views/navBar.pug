doctype html
html
  head
      block head
        link(rel="stylesheet" href="/stylesheets/navbar.css")

  body
    header
      //- img(class="logo" src="../images/MarvelousLogo.png")
      nav(class="navbar")
        a(class="navbar-logo" href="/")
          div
            img(src="../images/MarvelousLogo.png" class="logo")
            if locals.authenticated
              ul(class="navLinks")
                li: a(class="homeLink" href="/") Home
                li: a(class="moviesLink" href="/movies/all") Movies
                li: a(class="myProfileLink" href="/user/profile") Welcome #{user.username}!
                li: form(action="/user/logout" method="post")
                    button(class="button" type='submit') Logout
            else
              ul(class="navLinks")
                li: a(class="homeLink" href="/") Home
                li: a(class="moviesLink" href="/movies/all") Movies
                li: a(class="button" href="/user/login") Login
                li: a(class="button" href="/user/signup") SignUp
                li: a(class="aboutUs" href="#") About Us
